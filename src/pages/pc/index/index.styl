@import '../../../assets/styles/main.styl'
#page
    height 100vh
    background: $background
    .swiper-container 
        height: 100vh
        background: #ccc
        overflow hidden
        .swiper-slide
            height 100vh
            .logo
                height 100vh
                width: 100%
                background: linear-gradient(-45deg,#0081ff, #1cbbb4);
                display: flex
                align-items: center
                justify-content: center
                flex-direction: column
                .img-wrapper
                    height 150px
                    width 150px
                    background: #ccc
                    margin-bottom: 50px
                .text-logo
                    font-size: 98px
                    color: #fff
                    margin-top: -50px
                    margin-bottom: 50px
                h1
                    color: #fff
                .more
                    margin-top: 50px
                    color: #fff
                    a
                        color: #fff
                        background: rgba(0,0,0,.4)
                        display: inline-block
                        padding: 0 4px
                        border-radius: 4px
                        transition: .3s
                        &:hover
                            background: #ffffff
                            color: #0081ff
